import static org.junit.jupiter.api.Assertions.*;

import java.io.ByteArrayOutputStream;
import java.io.PrintStream;

import org.junit.jupiter.api.AfterEach;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

public class OrganizadoresTest {

    private final PrintStream originalOut = System.out;
    private final ByteArrayOutputStream outContent = new ByteArrayOutputStream();


    @Test
    public void testConstructorAndGetters() {
        Organizadores org = new Organizadores("Pedro", "666777888", "pedro@email.com");
        assertEquals("Pedro", org.getName());
        assertEquals("666777888", org.getTlf());
        assertEquals("pedro@email.com", org.getEmail());
        assertNotNull(org.getId());
    }

    @Test
    public void testSignInOrganizadorWithAllFields() {
        Organizadores org = new Organizadores("Ana", "123456789", "ana@email.com");
        org.signInOrganizador();
        String output = outContent.toString().trim();
        assertEquals("datos agregados correctamente", output);
    }

    @Test
    public void testSignInOrganizadorWithMissingFields() {
        Organizadores org = new Organizadores(null, "123456789", "ana@email.com");
        org.signInOrganizador();
        String output = outContent.toString().trim();
        assertEquals("Error, todos los campos tienen que estar completos", output);
    }

    @Test
    public void testSetters() {
        Organizadores org = new Organizadores();
        org.setId(50);
        org.setName("Luis");
        org.setTlf("999999999");
        org.setEmail("luis@email.com");

        assertEquals(50, org.getId());
        assertEquals("Luis", org.getName());
        assertEquals("999999999", org.getTlf());
        assertEquals("luis@email.com", org.getEmail());
    }

    @Test
    public void testToString() {
        Organizadores org = new Organizadores("Maria", "111222333", "maria@email.com");
        String expected = "Organizadores [id=" + org.getId() + ", name=Maria, tlf=111222333, email=maria@email.com]";
        assertEquals(expected, org.toString());
    }
}